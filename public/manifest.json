{
  "manifest_version": 3,

  "name": "Save to Obsidian",
  "description": "Save the Web to Obsidian",
  "version": "1.0",

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
